<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container text-center">
    <h1><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <div class="row my-5">
    <div class="col-12 col-md-8">
      <h2 class="mb-3">My Lists</h2>
      <div class="cards">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="card-movie">
            <img src="<%= bookmark.movie.poster_url %>" />
            <div class="card-movie-description">
              <div>
                <h2><%= bookmark.movie.title %></h2>
                <p><%= bookmark.movie.overview %></p>
              </div>
              <div class="card-movie-infos mt-3 align-items-center">
                <div class="d-flex align-items-center"><i class="fas fa-quote-left"></i><p class="card-movie-comment ml-2"><%= bookmark.comment %></p></div>
                <%= link_to 'delete', list_path(@list), class: 'text-danger card-movie-comment' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
