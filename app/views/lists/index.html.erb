<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container text-center">
    <h1>Save any kind of movies!</h1>
    <p>Classic</p>
  </div>
</div>
<div class="container">
  <div class="row my-5">
    <div class="col-12 col-md-8">
      <h2 class="mb-3">My Lists</h2>
      <div class="cards">
        <% @lists.each do |list| %>
          <%= link_to list_path(list) do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.image %>)">
              <h3><%= list.name %></h3>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <%= link_to 'Create a movie list', new_list_path, class: 'cta cta-light' %>
    </div>
  </div>
</div>
